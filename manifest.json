{
  "manifest_version": 3,
  "name": "Web History",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "declarativeNetRequest",
    "notifications",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*.png", "blacklist.txt"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
        "matches": ["https://extensionpay.com/*"],
        "js": ["ExtPay.js"],
        "run_at": "document_start"
    },
    {
        "matches": ["http://*/", "https://*/"],
        "js": ["ExtPay.js"]
    }
]
}
